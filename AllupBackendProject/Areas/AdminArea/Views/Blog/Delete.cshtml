@model Blog
@{ ViewData["Title"] = "Delete"; }

<div class="container">
    <div class="row">
        <div class="col-6">
            <img style="width: 150px" src="~/images/@Model.ImageUrl" />
            <p>@Model.Title</p>
        </div>
        <form class="forms-sample mt-3" method="Post">
            <button class="btn btn-light">Delete</button>
        </form>

        <div class="col-6">
            <a asp-controller="Blog" asp-action="Index" class="btn btn-warning">Go Back</a>
        </div>
    </div>
</div>

