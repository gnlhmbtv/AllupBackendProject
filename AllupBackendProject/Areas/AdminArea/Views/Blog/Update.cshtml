@model Blog
@{ ViewData["Title"] = "Update"; }

<div class="container">
    <div class="row">
        <div class="col-6">
            <img style="width:150px; height:150px" src="~/images/@Model.ImageUrl" />
            <form class="forms-sample" method="Post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Name">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <p>@Model.Title</p>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="MainTitle">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p>@Model.HomePageText</p>
                    <label asp-for="HomePageText"></label>
                    <textarea asp-for="HomePageText" class="form-control" placeholder="Home Page Text"></textarea>
                    <span asp-validation-for="HomePageText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p>@Model.BlogText</p>
                    <label asp-for="BlogText"></label>
                    <textarea asp-for="BlogText" class="form-control" placeholder="Text"></textarea>
                    <span asp-validation-for="BlogText" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <a asp-controller="Blog" asp-action="Index" class="btn btn-warning">Go Back</a>
                </div>
                <button class="btn btn-light">Update</button>
            </form>

        </div>
    </div>
</div>
