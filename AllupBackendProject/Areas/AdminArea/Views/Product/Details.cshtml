@model Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExTax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExTax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Availibility)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Availibility)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Featured)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Featured)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Discount) %
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @ViewBag.category.Name
        </dd>
        <dt class="col-sm-2">
            Colors
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in ViewBag.colors)
            {
                @item.Name
            }
        </dd>
        <dt class="col-sm-2">
            Tags
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in ViewBag.tags)
            {
                @item.Name
            }
        </dd>
        <dt class="col-sm-2">
            Main Photo
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@ViewBag.photo.PhotoUrl" style="width:200px;height:200px" />
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-warning">Back to List</a>
</div>
