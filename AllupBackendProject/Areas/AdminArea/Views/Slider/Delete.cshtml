@model Slider
@{ ViewData["Title"] = "Delete"; }

<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="~/images/@Model.ImageUrl" />
            <p>@Model.MainTitle</p>
            <p>@Model.SubTitle</p>
            <p>@Model.SliderText</p>
        </div>
        <div class="col-6">
            <a asp-controller="Slider" asp-action="Index" class="btn btn-warning">Go Back</a>
        </div>
        <form class="forms-sample mt-3" method="Post">
            <button class="btn btn-light">Delete</button>
        </form>
    </div>
</div>

